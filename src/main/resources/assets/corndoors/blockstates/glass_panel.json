{
    "multipart": [
        {
            "when":{
                "facing":"north"
            },
            "apply":{
                "model":"corndoors:block/general_glass_noside"
            }
        },
        {
            "when":{
                "facing":"east"
            },
            "apply":{
                "model":"corndoors:block/general_glass_noside",
                "y":90
            }
        },
        {
            "when":{
                "facing":"south"
            },
            "apply":{
                "model":"corndoors:block/general_glass_noside",
                "y":180
            }
        },
        {
            "when":{
                "facing":"west"
            },
            "apply":{
                "model":"corndoors:block/general_glass_noside",
                "y":270
            }
        },



        {
            "when":{
                "facing":"north",
                "belt_type":"blue"
            },
            "apply":{
                "model":"corndoors:block/blue_belt"
            }
        },
        {
            "when":{
                "facing":"east",
                "belt_type":"blue"
            },
            "apply":{
                "model":"corndoors:block/blue_belt",
                "y":90
            }
        },
        {
            "when":{
                "facing":"south",
                "belt_type":"blue"
            },
            "apply":{
                "model":"corndoors:block/blue_belt",
                "y":180
            }
        },
        {
            "when":{
                "facing":"west",
                "belt_type":"blue"
            },
            "apply":{
                "model":"corndoors:block/blue_belt",
                "y":270
            }
        }
    ]
}